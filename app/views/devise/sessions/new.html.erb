<div class="section section-breadcrumbs">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Login</h1>
      </div>
    </div>
  </div>
</div>

<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-sm-5">
        <div class="basic-login">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <label for="login-username"><i class="icon-user"></i> <b>Username</b></label>
              <%= f.email_field :email, :required => true, :class => 'form-control', :autofocus => true, :input_html => {:size => 50} %>
            </div>
            <div class="form-group">
              <label for="login-password"><i class="icon-lock"></i> <b>Password</b></label>
              <%= f.password_field :password, :required => true, :class => 'form-control', :input_html => {:size => 50} %>
            </div>
            <div class="form-group">
              <label class="checkbox">
                <%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %> Remember me
              </label>
              <%= render "devise/shared/links" %>
              <button class="btn pull-right" type="submit">Login</button>
              <div class="clearfix"></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
