<div class="section section-breadcrumbs">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Profile</h1>
      </div>
    </div>
  </div>
</div>

<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-sm-2">
        <%= link_to "Announcement", "javascript:void(0)"%>
      </div>
      <div class="col-sm-2">
        <%= link_to "Business Information", edit_business_path(@business) %>
      </div>
      <div class="col-sm-2">
        <%= link_to "Reviews and Comments", "javascript:void(0)"%>
      </div>
    </div>
  </div>
</div>


<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-sm-1">
        <strong>Name: </strong>
      </div>
      <div class="col-sm-10">
        <%= @business.name %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-1">
        <strong>Phone: </strong>
      </div>
      <div class="col-sm-10">
        <%= @business.phone %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-1">
        <strong>Address: </strong>
      </div>
      <div class="col-sm-10">
        <%= @business.add1 %> <%= @business.add2 %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-1">
        <strong>City: </strong>
      </div>
      <div class="col-sm-10">
        <%= @business.city %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-1">
        <strong>State: </strong>
      </div>
      <div class="col-sm-10">
        <%= @business.state %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-1">
        <strong>Zip: </strong>
      </div>
      <div class="col-sm-10">
        <%= @business.zip %>
      </div>
    </div>
  </div>
</div>
